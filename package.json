{
  "imports": {
    "~/*": "./*.ts"
  },
  "scripts": {
    "build": "vite build",
    "ci": "pnpm run prettier:check && pnpm run lint && tsc --noEmit && sort-package-json package.json --check && pnpm test",
    "dev": "ts-node-dev -r tsconfig-paths/register ./src/server/index.ts",
    "lint": "eslint ./src",
    "prepare": "husky install",
    "prettier:check": "prettier ./src --check",
    "prettier:format": "prettier ./src --write",
    "server:prod": "cross-env NODE_ENV=production ts-node ./src/server",
    "test": "jest"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "@tanstack/react-query": "^4.14.3",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "express": "^4.18.1",
    "lodash": "^4.17.21",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "sirv": "^2.0.2",
    "sort-package-json": "^2.0.0",
    "ts-node": "^10.7.0",
    "typescript": "*",
    "vite": "^3.0.9",
    "vite-plugin-ssr": "^0.4.44"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.2.1",
    "@types/lodash": "^4.14.187",
    "@types/node": "^17.0.31",
    "@types/react": "^18.0.8",
    "@types/react-dom": "^18.0.3",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@vitejs/plugin-react": "^2.0.1",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.31.10",
    "husky": "^8.0.0",
    "jest": "^29.2.2",
    "jest-environment-jsdom": "^29.2.2",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1",
    "prettier-plugin-organize-imports": "^3.1.1",
    "pretty-quick": "^3.1.3",
    "ts-jest": "^29.0.3",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.0"
  }
}
